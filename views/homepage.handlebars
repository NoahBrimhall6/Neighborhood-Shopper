<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-11 col-sm-10 col-md-8 col-lg-6">
      <form class="d-flex main-search">
        <input type="text" id="searchZip" class="form-control form-control-lg me-2" placeholder="Search Zipcode">
        <button type="button" class="btn btn-success">Search</button>
      </form>
    </div>
  </div>

  <div class="row justify-content-evenly">

    {{#each cards as |card|}}
    <div class="col-12 col-sm-6 col-lg-4 col-xxl-3">
      <div class="card" data-id="{{card.id}}">
        <img src="{{card.main_image}}" class="card-img-top" alt="{{card.title}}">
        <div class="card-body">
          <h5 class="card-title">{{card.title}}</h5>
          <p class="card-text">{{card.description}}</p>
          <a href="#" class="btn btn-primary">Go to page</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>
<script src="/scripts/homepage.js"></script>