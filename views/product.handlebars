<div class="container">
  <div class="row mb-3">
    <div class="col border-bottom border-secondary">
      <h2>{{product.title}}</h2>
    </div> 
  </div>

  <div class="row mb-3">
    <div class="col-12 col-md-8">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="card">
              <img src="{{product.main_image}}" class="card-img"> 
            </div>
          </div>
        </div>
  
        <div class="row mb-3">
          <div class="col-6">
            <div class="card">
              <img src="{{product.second_image}}" class="card-img"> 
            </div>
          </div>
  
          <div class="col-6">
            <div class="card">
              <img src="{{product.third_image}}" class="card-img"> 
            </div>
          </div>
        </div>
      </div>
    </div>

    <aside class="col-12 col-md-4 border-start border-secondary">
      <div>
        <h3>{{product.price}}</h3>
        <h2>Product Description: </h2>
        <p>{{product.description}}</p>
      </div>
    </aside>
  </div>

  <div class="row">
    <div class="col">
      <div>
        <label for="addComment" class="form-label">Add Comment</label>
        <textarea class="form-control" id="addComment" rows="1"></textarea>
        <button class="btn btn-primary mt-3" id="commentSubmit" type="submit">Post Comment</button>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/product.js"></script>